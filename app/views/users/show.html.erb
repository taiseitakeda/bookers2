<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <%= image_tag @user.get_profile_image(80,80) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <a class="byn byn-outline-secondary btn-block" href="/users/:id/edit">
          <i class="fas fa-user-cog" aria-hidden="true"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @bookers do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book", class:"btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <a class="nav-link" href="/users/:id">
                <%= image_tag @user.get_profile_image(80,80) %><br>
                <%= @user.name %>
              </a>
            </td>
            <td>
              <a class="nav-link" href="/books/:id"><%= @user.book.title %></a>
            </td>
            <td><%= @user.book.body %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

