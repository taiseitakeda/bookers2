<div class="container">
  <div class="row">
    <%= render 'books/part', books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <a class="nav-link" href="/users/:id">
                <%= image_tag book.user.get_profile_image(80,80) %><br>
                <%= @user.name %>
              </a>
            </td>
            <td>
              <a class="nav-link" href="/books/:id"><%= @user.book.title %></a>
            </td>
            <td><%= @user.book.body %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

