
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h1>User Info</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label>Name</label>
          <a><%= f.text_field :name %></a>
        </div>
        <div class="form-group">
          <label>Image</label>
          <a><%= f.file_field :profile_image, accept: "image/*" %></a>
        </div>
        <div class="form-group">
          <label>Introduction</label>
          <a><%= f.text_area :introduction %></a>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>