<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: update_list_path(@book.id), method: :patch do |f| %>
        <div class="form-group">
          <label>Title</label>
          <a><%= f.text_field :title %></a>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <a><%= f.text_field :body %></a>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      <% end %>
      <a class="show" href="/books/:id">Show</a>
      |
      <a class="back" href="/books">Back</a>
    </div>
  </div>
</div>