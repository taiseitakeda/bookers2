<div class="container">
  <div class="row">
    <%= render 'part', books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <a class="nav-link" href="/users/:id">
                  <%= image_tag book.user.get_profile_image(80,80) %><br>
                  <%= @book.user.name %>
                </a>
              </td>
              <td>
                <a class="nav-link" href="/books/:id"><%= @book.title %></a>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td>
                <a class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(book.id) %></a>
              </td>
              <td>
                <a class="btn btn-sm btn-danger"><%= link_to "Destroy", book_path(book.id), method: :delete %></a>
              </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
