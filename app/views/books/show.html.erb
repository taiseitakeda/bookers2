<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <% if list.profile_image.attached? %>
        <%= image_tag book.user.get_profile_image(80,80) %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <a class="byn byn-outline-secondary btn-block" href="/users/:id/edit">
          <i class="fas fa-user-cog" aria-hidden="true"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @bookers do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book", class:"btn btn-success" %>
      <% end %>
    </div>
        <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>

            <tr>
              <td>
                <a class="nav-link" href="/users/:id">
                  <% if list.profile_image.attached? %>
                    <%= image_tag book.user.get_profile_image(80,80) %>
                  <% else %>
                    <%= image_tag 'no_image', size: "200x200" %>
                  <% end %><br>
                  <%= @user.name %>
                </a>
              </td>
              <td>
                <a class="nav-link" href="/books/:id"><%= @book.title %></a>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td>
                <a class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(book.id) %></a>
              </td>
              <td>
                <a class="btn btn-sm btn-danger"><%= link_to "Destroy", book_path(book.id), method: :delete %></a>
              </td>
              <% end %>
            </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>
