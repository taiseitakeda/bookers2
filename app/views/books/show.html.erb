<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <% if @book.user.profile_image.attached? %>
        <%= image_tag @book.user.get_profile_image(80,80) %>
      <% else %>
        <%= image_tag 'no_image', size: "80x80" %>
      <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog" aria-hidden="true"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @bookers do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book", class:"btn btn-success" %>
      <% end %>
    </div>
        <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>

            <tr>
              <td>
                <%= link_to user_path(current_user), class: "nav-link" do %>
                  <% if @book.user.profile_image.attached? %>
                    <%= image_tag @book.user.get_profile_image(80,80) %>
                  <% else %>
                    <%= image_tag 'no_image', size: "80x80" %>
                  <% end %><br>
                  <%= @book.user.name %>
                <% end %>
                </a>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user == current_user %>
              <td>
                <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>
                  <span>Edit</span>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger" do %>
                  <span>Destroy</span>
                <% end %>
              </td>
              <% end %>
            </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>
