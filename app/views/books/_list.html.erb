<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag book.current_user.get_profile_image(80,80) %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= link_to current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= link_to current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <a class="byn byn-outline-secondary btn-block" href="/users/:id/edit">
      <i class="fas fa-user-cog" aria-hidden="true"></i>
    </a>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book", class:"btn btn-success" %>
  <% end %>
</div>