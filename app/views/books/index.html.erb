<div class="container">
  <div class="row">

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.user.image %></td>
              <td>
                <a class="nav-link" href="/books/:id"><%= book.title %></a>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
